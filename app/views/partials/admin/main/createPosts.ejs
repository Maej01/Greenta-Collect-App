<% include ../admin-head %>
<body class="theme-blue">
    <!-- Page Loader -->
    <% include ../admin-page-loader %>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    <% include ../top-nav %>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <% include ../admin-left-sidebar %>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <% include ../admin-right-sidebar %>
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <!-- displaying the success message -->
            <% include ../messages %>
            <!-- CREATE POST AREA -->
            <div class="container">
               <h4 class="center">Create new post</h4>
               <div class="row">
                 <div class="col s12 m10">
                   <form class="col s12" method="post" action="/admin/posts/create" enctype="multipart/form-data">
                       <div class="row">
                         <div class="input-field col s6">
                           <input placeholder="Title" id="title" name="title" type="text" class="validate">
                           <label for="title">Title</label>
                         </div>
                         <div class="form-group">
                           <!-- <label>Status</label> -->
                           <select class="form-control" name="status">
                               <option value="" disabled selected>Choose a Status</option>
                               <option value="public">Public</option>
                               <option value="private">Private</option>
                               <option value="draft">Draft</option>
                           </select>
                         </div>
                       </div>
                       <div class="row">
                         <div class="file-field input-field col s6">
                            <div class="btn">
                              <span>File</span>
                              <input type="file" name="uploadedFile">
                            </div>
                            <div class="file-path-wrapper">
                              <input class="file-path validate" type="text">
                            </div>
                         </div>
                         <div class="input-field col s12">
                           <p>
                             <label>
                               <input type="checkbox" id="allowComments" name="allowComments"/>
                               <span>Allow Comments</span>
                             </label>
                           </p>
                         </div>
                       </div>
                       <div class="row">
                         <div class="input-field col s12">
                           <textarea id="description" name="description" placeholder="Enter your content here..." class="materialize-textarea"></textarea>
                           <label for="description">Content</label>
                         </div>
                       </div>
                       <button class="btn waves-effect waves-light" type="submit" >Create Post
                         <i class="material-icons right">send</i>
                       </button>
                     </form>
                 </div>
               </div>
            </div>
            <!-- END OF CREATE POST AREA -->
          </div>
    </section>

    <% include ../admin-jslinks.ejs %>
  </body>

  </html>
