<% include ../admin-head %>
<body class="theme-green">
    <!-- Page Loader -->
    <% include ../admin-page-loader %>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    <% include ../top-nav %>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <% include ../admin-left-sidebar %>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <% include ../admin-right-sidebar %>
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Available Product Forms</h2>
            </div>
            <!-- Available Product Form by District -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Post for Available Products By District</h2>
                        </div>
                        <div class="body">
                            <!-- message -->
                            <% include ../messages %>
                            <!-- end of message -->
                            <form method="POST" action="/admin/post/new/product-by-district" class="">
                                <div class="row">
                                  <div class="col s12 m4">
                                        <div class="form-group">
                                            <label for="district">Choose District</label>
                                            <select class="form-control" id="district">
                                            <option >Western Area Urban</option>
                                            <option  >Western Area Rural</option>
                                            <option  >Falaba</option>
                                            <option  >Koinadugu</option>
                                            <option  >Bombali</option>
                                            <option  >Tonkolili</option>
                                            <option  >Kambia</option>
                                            <option  >Karene</option>
                                            <option  >Porto Loko</option>
                                            <option  >Bo</option>
                                            <option  >Bonthe</option>
                                            <option  >Pujehun</option>
                                            <option  >Moyamba</option>
                                            <option  >Kenema</option>
                                            <option  >Kaliahun</option>
                                            <option  >Kono</option>
                                            </select>
                                        </div>
                                     </div>
                                    <div class="col s12 m4">
                                        <div class="form-group">
                                            <label for="district">Choose Product</label>
                                            <select class="form-control" id="product">
                                            <option >Cocao</option>
                                            <option  >Groundnut</option>
                                            <option  >Palm oil</option>
                                            <option  >Cassava</option>
                                            <option  >Coffee</option>
                                            <option  >Sweet Potatoe</option>
                                            <option  >Maize</option>
                                            </select>
                                        </div>
                                     </div>
                                    <div class="col s12 m4">
                                        <label for="quantity">Quantity</label>
                                        <input id="quantity" type="text" class="validate" name="quantity" required>
                                    </div>
                                </div>
                                <input class="btn-small btn-enum blue" id="btn_publish_ava_prod_per_dist" type="submit" value="PUBLISH">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Available Product Form by District-->

            <!-- Available Product Form -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Post for Available Products for sale (general)</h2>
                        </div>
                        <div class="body">
                            <form method="POST" action="/admin/post/new/product/available" enctype="multipart/form-data">
                                <!-- message -->
                                <% include ../messages %>
                                <!-- end of message -->
                                <div class="row">
                                    <!-- <div class="input-field col s12 m4">
                                        <i class="material-icons prefix"></i>
                                        <label for="district">District</label>
                                        <input id="district" type="text" class="validate" name="district" required>
                                    </div> -->
                                    <div class="input-field col s12 m4">
                                        <label for="product">Product Name</label>
                                        <input id="product" type="text" class="validate" name="product" required>
                                    </div>
                                    <div class="input-field col s12 m4">
                                        <label for="fbo">FBO's Name</label>
                                        <input id="fbo" type="text" class="validate" name="fbo" required>
                                    </div>
                                    <div class="file-field input-field col s12 m4">
                                        <div class="btn">
                                            <span>Upload Photo</span>
                                            <input type="file" id="uploadedFile" name="uploadedFile">
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text">
                                        </div>
                                    </div>
                                </div>
                                <input class="btn-small btn-enum blue" type="submit" value="PUBLISH">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Available Product Form -->
            
        </div>
    </section>

    <% include ../admin-jslinks.ejs %>
  </body>

  </html>
